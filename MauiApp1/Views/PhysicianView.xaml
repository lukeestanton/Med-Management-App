<?xml version="1.0" encoding="utf-8" ?> 
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.PhysicianView"
             Title="PhysicianView"
             NavigatedTo="PhysicianView_NavigatedTo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Physician Name -->
            <Label Text="Physician Name" FontAttributes="Bold" />
            <Entry Text="{Binding Name}" Placeholder="Enter physician name" />

            <!-- Action Buttons -->
            <HorizontalStackLayout Spacing="20" Padding="0,20,0,0">
                <Button Text="Ok" Clicked="AddClicked" />
                <Button Text="Cancel" Clicked="CancelClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="#1C1C1C">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="30"> 

            <Image
                Source="medicalcarelogo.png"
                WidthRequest="300"
                HeightRequest="300"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <!-- Subtitle -->
            <Label 
                Text="Welcome to the premier medical management system." 
                FontSize="18" 
                TextColor="LightGray" 
                HorizontalOptions="Center" 
                HorizontalTextAlignment="Center" />

            <!-- Button to Manage Patients -->
            <Button 
                Text="Manage Patients" 
                Clicked="PatientsClicked"
                TextColor="White"
                BackgroundColor="#FF9800"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="60"
                WidthRequest="250"
                HorizontalOptions="Center"
                />
            
            
            <!-- Button to Manage Physicians -->
            <Button 
                Text="Manage Physicians" 
                Clicked="PhysicianManagerButtonClicked" 
                BackgroundColor="#03A9F4"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="60"
                WidthRequest="250"
                HorizontalOptions="Center"
                />
            
            <!-- Button to Manage Appointments -->
            <Button 
                Text="Manage Appointments" 
                Clicked="AppointmentsClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="60"
                WidthRequest="250"
                HorizontalOptions="Center" 
                />

            <!-- Button to Manage Treatments -->
            <Button 
                Text="Manage Treatments" 
                Clicked="OnManageTreatmentsClicked"
                BackgroundColor="#9C27B0"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="60"
                WidthRequest="250"
                HorizontalOptions="Center" 
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

